rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- HELPER FUNCTIONS ---
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isTripOwner(tripId) {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/trips/$(tripId)).data.userId == request.auth.uid;
    }

    function isCarpoolOwner(carpoolId) {
      return isAuthenticated() && 
             request.auth.uid == resource.data.createdBy;
    }

    // --- COLLECTIONS ---

    // Places & Reviews (Publicly readable for "Guest Mode")
    match /places/{placeId} {
      allow read: if true; // ✅ Anyone can see places
      allow write: if false; 

      match /reviews/{reviewId} {
        allow read: if true; // ✅ Anyone can read reviews
        
        // Only logged-in users can write reviews
        allow create: if isAuthenticated() 
                      && request.resource.data.userId == request.auth.uid;
        allow update, delete: if isAuthenticated() 
                              && resource.data.userId == request.auth.uid;
      }
    }
    
    // Trips collection
    match /trips/{tripId} {
      allow create: if isAuthenticated() 
                    && request.resource.data.userId == request.auth.uid;
      
      // Trips are private to the owner
      allow read: if isAuthenticated() 
                  && resource.data.userId == request.auth.uid;
      
      allow update, delete: if isAuthenticated() 
                            && resource.data.userId == request.auth.uid;
      
      // Subcollections inside Trips
      match /dayPlans/{dayPlanId} { 
        allow read, write: if isTripOwner(tripId); 
      }
      
      match /expenses/{expenseId} { 
        allow read, write: if isTripOwner(tripId); 
      }
      
      // Carpools subcollection - with collectionGroup support
      match /carpools/{carpoolId} {
        // Trip owner can read/write their own carpools
        allow read, write: if isTripOwner(tripId);
        
        // Any authenticated user can read active carpools for discovery
        allow read: if isAuthenticated() 
                    && resource.data.status == "active";
        
        // Carpool owner can update/delete their own carpool
        allow update, delete: if isAuthenticated() 
                              && resource.data.createdBy == request.auth.uid;
        
        // Join requests subcollection
        match /joinRequests/{requestId} {
          // Users can read requests for their own carpools
          allow read: if isAuthenticated() 
                      && (resource.data.tripOwnerId == request.auth.uid 
                          || resource.data.userId == request.auth.uid);
          
          // Authenticated users can create join requests
          allow create: if isAuthenticated() 
                        && request.resource.data.userId == request.auth.uid
                        && request.resource.data.status == "pending";
          
          // Only the requester or carpool owner can update status
          allow update: if isAuthenticated() 
                        && (resource.data.userId == request.auth.uid 
                            || resource.data.tripOwnerId == request.auth.uid);
          
          allow delete: if isAuthenticated() 
                        && (resource.data.userId == request.auth.uid 
                            || resource.data.tripOwnerId == request.auth.uid);
        }
      }
    }
    
    // CollectionGroup rule for global carpool queries (Discovery Feed)
    match /{path=**}/carpools/{carpoolId} {
      // Any authenticated user can discover active carpools
      allow read: if isAuthenticated() 
                  && resource.data.status == "active";
      
      // Only carpool creator can modify
      allow write: if isAuthenticated() 
                   && request.auth.uid == resource.data.createdBy;
    }
    
    // User Profiles (Publicly readable so friends can find each other)
    match /users/{userId} {
      allow read: if isAuthenticated(); 
      allow write: if isOwner(userId);

      // User Preferences subcollection
      match /preferences/{prefId} {
        allow read: if isOwner(userId);
        allow create, update, delete: if isOwner(userId);
      }
    }

    match /userProfiles/{userId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isOwner(userId);
    }

    // Friendships (New Friend System)
    match /friendships/{friendshipId} {
      allow read, write: if isAuthenticated() && 
        (request.auth.uid == resource.data.senderId || 
         request.auth.uid == resource.data.receiverId || 
         request.auth.uid == request.resource.data.senderId);
    }
    
    // Conversations collection (Chat messages)
    match /conversations/{conversationId} {
      // Users can read if they are a participant
      allow read: if isAuthenticated() &&
        (request.auth.uid in resource.data.participantIds);
      
      // Users can create if they are in the participant list
      allow create: if isAuthenticated() &&
        (request.auth.uid in request.resource.data.participantIds);
      
      // Users can update if they are a participant
      allow update: if isAuthenticated() &&
        (request.auth.uid in resource.data.participantIds);
      
      // Messages subcollection
      match /messages/{messageId} {
        // Read messages if user is a participant in the conversation
        allow read: if isAuthenticated() && (
          // Check if user is in the conversation's participant list
          request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds ||
          // Also allow if this is the sender of the message
          request.auth.uid == resource.data.senderId
        );
        
        // Create messages if user is a participant or document exists
        allow create: if isAuthenticated() && (
          request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds ||
          request.auth.uid == request.resource.data.senderId
        );
        
        // Update messages (for read receipts, etc) if user is a participant
        allow update: if isAuthenticated() &&
          (request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds ||
           request.auth.uid == resource.data.senderId);
      }
    }
    
    // Notifications (optional but recommended)
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Carpool Join Requests
    match /carpoolRequests/{requestId} {
      // Requesters can read their own requests
      allow read: if isAuthenticated() && 
        (request.auth.uid == resource.data.requesterId || 
         request.auth.uid == resource.data.driverId);
      
      // Authenticated users can create join requests
      allow create: if isAuthenticated() && 
        request.auth.uid == request.resource.data.requesterId;
      
      // Only the requester or driver can update
      allow update: if isAuthenticated() && 
        (request.auth.uid == resource.data.requesterId || 
         request.auth.uid == resource.data.driverId);
      
      // Only requester or driver can delete
      allow delete: if isAuthenticated() && 
        (request.auth.uid == resource.data.requesterId || 
         request.auth.uid == resource.data.driverId);
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
